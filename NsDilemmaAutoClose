// ==UserScript==
// @name         AutoCloseIssuePage
// @namespace    http://tampermonkey.net/
// @version      0.1
// @description  button focus.
// @author       9003
// @match        https://www.nationstates.net/container=*/page=enact_dilemma/choice-*=1/dilemma=*/template-overall=none/nation=*/asnation=*
// @match        https://www.nationstates.net/page=enact_dilemma/choice-*=1/dilemma=*/nation=*/template-overall=none
// @grant        window.close
// ==/UserScript==


// Your code here...
(function() {
    'use strict';
    if(document.getElementsByClassName("button lootboxbutton").length > 0){
        document.getElementsByClassName("button lootboxbutton")[0].focus();
    }
    else
    {window.close()};
})();
